$.ajax({
    type: "{{method}}",
    url: "{{requestUrl}}",

    {% if request.meaningfulHeaders.size > 0 -%}
    // Request headers
    beforeSend: function(xhrObj) {
        {% for header in request.meaningfulHeaders -%}
        xhrObj.setRequestHeader("{{header.name}}", "{{header.value}}");
        {% endfor -%}
    },
    {% endif -%}
    {% if request.body -%}

    // Request body
    data: "{{ request.body | replace:'"','\"' }}",
    {% endif -%}
})
.done(function (data) {
    alert("success");
})
.fail(function () {
    alert("error");
});